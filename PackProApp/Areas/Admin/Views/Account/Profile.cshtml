 @model PackProApp.Areas.Admin.Modelss.AdminProfilVM

<h2>@Localizer["Welcome"], @Model.Username</h2>

<div class="card">
    <div class="card-header">
        <h3>@Localizer["Profile Information"]</h3>
    </div>
    <div class="card-body">
        <p><strong>@Localizer["Username"]:</strong> @Model.Username</p>
        <p><strong>@Localizer["Email"]:</strong> @Model.Email</p>

        <p><strong>@Localizer["Photo"]:</strong></p>
        @if (Model.AdminImage != null)
        {
            <img src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.AdminImage))" alt="Profile Image" style="max-width: 150px;" />
        }
        else
        {
            <p>@Localizer["No photo available."]</p>
        }
    </div>
    <div class="card-footer">
        <a href="@Url.Action("Update", "Account", new { area = "Admin" })" class="btn btn-primary">
            @Localizer["Update"]
        </a>
    </div>
</div>
