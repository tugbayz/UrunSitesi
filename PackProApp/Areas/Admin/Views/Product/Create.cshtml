 @using Microsoft.Extensions.Localization
    @inject IStringLocalizer<SharedResource> Localizer
@model PackProApp.Areas.Admin.Modelss.ProductVMs.AdminProductCreateVM

@{
    ViewData["Title"] = "Create";
}

<h1>@Localizer["Create Product"]</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NewImage" class="control-label">@Localizer["Product Image"]</label>
                <input type="file" asp-for="NewImage" class="form-control" />
                <span asp-validation-for="NewImage" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label">@Localizer["Product Name"]</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label">@Localizer["Price"]</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">@Localizer["Category"]</label>
                <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control">
                    <option value="">-- @Localizer["Select Category"] --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Localizer["Back to List"]</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
