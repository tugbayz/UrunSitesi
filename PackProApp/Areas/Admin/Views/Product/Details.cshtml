 @using Microsoft.Extensions.Localization
    @inject IStringLocalizer<SharedResource> Localizer
@model PackProApp.Areas.Admin.Modelss.ProductVMs.AdminProductDetailVM

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>@Localizer["Product Details - PackPro"]</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/assets/img/favicon.png" rel="icon">
    <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/assets/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="~/assets/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="~/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/assets/vendor/simple-datatables/style.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/assets/css/style.css" rel="stylesheet">
</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">
        <div class="d-flex align-items-center justify-content-between">
            <a href="~/Admin/Home/Index" class="logo d-flex align-items-center">
                <img src="~/assets/img/logo.png" alt="">
                <span class="d-none d-lg-block">PackPro</span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div><!-- End Logo -->
        <!-- Header and other navigation items can remain unchanged -->
    </header><!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">
        <ul class="sidebar-nav" id="sidebar-nav">
            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="Admin" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-grid"></i>
                    <span>@Localizer["Dashboard"]</span>
                </a>
            </li><!-- End Dashboard Nav -->
            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="Admin" asp-controller="Category" asp-action="Index">
                    <i class="bi bi-envelope"></i>
                    <span>@Localizer["Categories"]</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="Admin" asp-controller="Customer" asp-action="Index">
                    <i class="bi bi-envelope"></i>
                    <span>@Localizer["Customers"]</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="Admin" asp-controller="Product" asp-action="Index">
                    <i class="bi bi-question-circle"></i>
                    <span>@Localizer["Products"]</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="" asp-controller="Account" asp-action="Logout">
                    <i class="bi bi-box-arrow-in-right"></i>
                    <span>@Localizer["Logout"]</span>
                </a>
            </li>
        </ul>
    </aside><!-- End Sidebar-->

    <main id="main" class="main">

        <div class="pagetitle">
            <h1>@Localizer["Product Details"]</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">@Localizer["Home"]</a></li>
                    <li class="breadcrumb-item">@Localizer["Components"]</li>
                    <li class="breadcrumb-item active">@Localizer["Product Details"]</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->

        <section class="section">
            <div class="row align-items-top">
                <div class="col-lg-6">

                    <div class="card">
                        <!-- Ürün resmini dinamik olarak buraya ekleyin -->
                        @if (Model.Image != null)
                        {
                            <img src="@($"data:image/png;base64,{Convert.ToBase64String(Model.Image)}")" class="card-img-top" alt="Ürün Resmi">
                        }
                        else
                        {
                            <img src="~/assets/img/no-image-available.png" class="card-img-top" alt="No Image Available">
                        }

                        <div class="card-body">
                            <!-- Ürün adını dinamik olarak buraya ekleyin -->
                            <h5 class="card-title">@Model.Name</h5>

                            <!-- Ürün fiyatını dinamik olarak buraya ekleyin -->
                            <p class="card-text"><strong>@Localizer["Price:"]</strong> @Model.Price.ToString("C")</p>
                            <!-- Ürün kategorisini dinamik olarak buraya ekleyin -->
                            <p class="card-text"><strong>@Localizer["Category:"]</strong> @Model.CategoryName</p>
                        </div>
                    </div>
                    <div class="card-footer text-center">
                        <a asp-action="Index" class="btn btn-secondary">@Localizer["Back to List"]</a>
                    </div>
                </div>
            </div>
        </section>
    </main><!-- End #main -->
    <!-- Vendor JS Files -->
    <script src=" ~/assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src=" ~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src=" ~/assets/vendor/chart.js/chart.umd.js"></script>
    <script src=" ~/assets/vendor/echarts/echarts.min.js"></script>
    <script src=" ~/assets/vendor/quill/quill.js"></script>
    <script src=" ~/assets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src=" ~/assets/vendor/tinymce/tinymce.min.js"></script>
    <script src=" ~/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src=" ~/assets/js/main.js"></script>

</body>
</html>
