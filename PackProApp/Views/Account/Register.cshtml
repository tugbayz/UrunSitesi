@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById('customerTypeSelect').addEventListener('change', function () {
            var customerType = this.value;
            if (customerType === 'Corporate') {
                document.getElementById('companyNameGroup').style.display = 'block';
                document.getElementById('vatNumberGroup').style.display = 'block';
            } else {
                document.getElementById('companyNameGroup').style.display = 'none';
                document.getElementById('vatNumberGroup').style.display = 'none';
            }
        });

        // Sayfa yüklendiğinde seçili müşteri türüne göre alanların doğru gösterilmesi
        window.onload = function () {
            var customerType = document.getElementById('customerTypeSelect').value;
            if (customerType === 'Corporate') {
                document.getElementById('companyNameGroup').style.display = 'block';
                document.getElementById('vatNumberGroup').style.display = 'block';
            }
        };
    </script>
}


